<div class="row">
    <div class="col-12">
        <h2>Корзина</h2>
    </div>
</div>

{{#if cartItems}}
<div class="row">
    <div class="col-md-8">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Товар</th>
                    <th>Цена</th>
                    <th>Количество</th>
                    <th>Сумма</th>
                    <th>Действия</th>
                </tr>
            </thead>
            <tbody>
                {{#each cartItems}}
                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="{{#if image_url}}{{image_url}}{{else}}https://via.placeholder.com/60x60/CCCCCC/FFFFFF?text=No+Image{{/if}}" alt="{{name}}" class="me-3" style="width: 60px; height: 60px; object-fit: cover;">
                            <div>
                                <div>{{name}}</div>
                            </div>
                        </div>
                    </td>
                    <td>{{price}} ₽</td>
                    <td>
                        <form method="PUT" action="/products/cart/update" class="d-inline">
                            <input type="hidden" name="productId" value="{{product_id}}">
                            <input type="number" name="quantity" value="{{quantity}}" min="1" class="form-control" style="width: 80px; display: inline-block;" onchange="this.form.submit()">
                        </form>
                    </td>
                    <td>{{total_price}} ₽</td>
                    <td>
                        <a href="/products/cart/{{product_id}}" class="btn btn-sm btn-danger" onclick="return confirm('Вы уверены, что хотите удалить товар из корзины?')">Удалить</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Итого</h4>
            </div>
            <div class="card-body">
                <p class="card-text">
                    <strong>Общая сумма: {{totalAmount}} ₽</strong>
                </p>
                <a href="/sales/create-order" class="btn btn-success w-100">Оформить заказ</a>
            </div>
        </div>
    </div>
</div>
{{else}}
<div class="row">
    <div class="col-12">
        <p class="text-center">Ваша корзина пуста</p>
        <div class="text-center">
            <a href="/products" class="btn btn-primary">Перейти к покупкам</a>
        </div>
    </div>
</div>
{{/if}}