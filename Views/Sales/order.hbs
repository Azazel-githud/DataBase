<div class="row">
    <div class="col-12">
        <h2>Заказ #{{order.id}}</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-header">
                <h4>Товары в заказе</h4>
            </div>
            <div class="card-body">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Товар</th>
                            <th>Количество</th>
                            <th>Цена за единицу</th>
                            <th>Сумма</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orderItems}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{quantity}}</td>
                            <td>{{unit_price}} ₽</td>
                            <td>{{total_price}} ₽</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h4>Информация о заказе</h4>
            </div>
            <div class="card-body">
                <p><strong>Номер заказа:</strong> #{{order.id}}</p>
                <p><strong>Дата:</strong> {{order.created_at}}</p>
                <p><strong>Статус:</strong> 
                    {{#if (eq order.status "pending")}}
                        <span class="badge bg-warning">В обработке</span>
                    {{else if (eq order.status "completed")}}
                        <span class="badge bg-success">Выполнен</span>
                    {{else if (eq order.status "cancelled")}}
                        <span class="badge bg-danger">Отменен</span>
                    {{else}}
                        <span class="badge bg-secondary">{{order.status}}</span>
                    {{/if}}
                </p>
                <p><strong>Сумма:</strong> {{order.total_amount}} ₽</p>
                
                {{#if (eq order.status "pending")}}
                    <form method="POST" action="/sales/cancel/{{order.id}}" class="mt-3">
                        <button type="submit" class="btn btn-danger w-100" onclick="return confirm('Вы уверены, что хотите отменить заказ?')">Отменить заказ</button>
                    </form>
                {{/if}}
            </div>
        </div>
    </div>
</div>