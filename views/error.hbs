{{! views/error.hbs }}
{{#> layout}}
<main class="main-content">
  <section class="error-section">
    <div class="error-info" style="text-align: center; padding: 60px 20px;">
      <h1 style="color: #e74c3c; font-size: 48px;">⚠️</h1>
      <h2 style="margin: 20px 0; color: #333;">{{title}}</h2>
      
      <div class="error-message" style="background: #f9f9f9; padding: 20px; border-radius: 8px; max-width: 600px; margin: 0 auto;">
        <p style="font-size: 18px; color: #555; margin-bottom: 10px;">
          {{message}}
        </p>
        
        {{#if error}}
        <div style="margin-top: 15px; padding: 10px; background: #ffebee; border-left: 4px solid #e74c3c;">
          <small style="color: #c0392b; font-family: monospace;">
            {{error}}
          </small>
        </div>
        {{/if}}
      </div>
      
      <div style="margin-top: 30px;">
        <a href="/" class="add-to-cart-btn" style="margin-right: 10px;">
          На главную
        </a>
        <a href="javascript:history.back()" class="wishlist-btn2">
          ← Назад
        </a>
      </div>
    </div>
  </section>
</main>
{{/layout}}