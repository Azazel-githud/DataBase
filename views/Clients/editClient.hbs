{{#> layout}}
<main class="main-content">
  <section class="product-section">
    <div class="product-info">
      <h1 class="product-title">✏️ Редактировать клиента #{{client.client_id}}</h1>
      <div class="divider"></div>

      <form action="/clients/update/{{client.client_id}}" method="POST">
        {{> client-form-fields client=client}}
        
        <div class="form-actions" style="margin-top: 24px;">
          <button type="submit" class="add-to-cart-btn">✅ Обновить</button>
          <a href="/clients" class="wishlist-btn2" style="margin-left: 12px;">← Отмена</a>
        </div>
      </form>
    </div>
  </section>
</main>
{{/layout}}